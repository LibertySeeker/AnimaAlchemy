<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="MakeableDrugBase">
		<defName>AnimaPill</defName>
		<label>anima pill</label>
		<description>A round pill refined from concentrated anima fiber extract. This pill contains instant digestible psychic energy which replenishes a portion of depleted psychic focus as well as provides mental relaxation to help dissipate neural heat and hightens psychic sensisitivity. Very useful for psycasters.</description>
		<descriptionHyperlinks>
			<HediffDef>AnimaPillHigh</HediffDef>
			<HediffDef>EF_AnimaAddiction</HediffDef>
			<ThingDef>AnimaFiber</ThingDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>AnimaPill</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<statBases>
			<WorkToMake>500</WorkToMake>
			<MarketValue>80</MarketValue>
			<Mass>0.01</Mass>
		</statBases>
		<techLevel>Neolithic</techLevel>
		<tradeTags>
			<li>AnimaDrug</li>
		</tradeTags>
		<ingestible>
			<foodType>Plant, Processed</foodType>
			<joyKind>Chemical</joyKind>
			<joy>0.80</joy>
			<baseIngestTicks>210</baseIngestTicks>
			<nurseable>true</nurseable>
			<drugCategory>Medical</drugCategory>
			<ingestHoldUsesTable>false</ingestHoldUsesTable>
			<ingestCommandString>Consume {0}</ingestCommandString>
			<ingestReportString>Consuming {0}.</ingestReportString>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>AnimaPillHigh</hediffDef>
					<severity>1.0</severity>
				</li>
				<li Class="IngestionOutcomeDoer_OffsetNeed">
					<need>Rest</need>
					<offset>0.125</offset>
				</li>
				<li Class="IngestionOutcomeDoer_OffsetPsyfocus">
					<offset>0.2</offset>
				</li>
			</outcomeDoers>
		</ingestible>
		
		<recipeMaker>
			<researchPrerequisite>AnimaAlchemy</researchPrerequisite>
			<recipeUsers>
				<li>Campfire</li>
				<li>ElectricStove</li>
				<li>FueledStove</li>
				<li>DrugLab</li>
			</recipeUsers>
			<workSpeedStat>DrugCookingSpeed</workSpeedStat>
			<skillRequirements>
				<Intellectual>6</Intellectual>
			</skillRequirements>
		</recipeMaker>
		
		<costList>
			<AnimaFiber>20</AnimaFiber>
			<PsychoidLeaves>10</PsychoidLeaves>
			<Gold>0.5</Gold>
		</costList>
		
		<comps>
			<li Class="CompProperties_Drug">
				<chemical>EF_Anima</chemical>
				<addictiveness>0.01</addictiveness>
				<minToleranceToAddict>1</minToleranceToAddict>
				<existingAddictionSeverityOffset>0.06</existingAddictionSeverityOffset>
				<needLevelOffset>0.9</needLevelOffset>
				<listOrder>20</listOrder>
			</li>
		</comps>
		
	</ThingDef>

</Defs>
