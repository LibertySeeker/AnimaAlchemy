<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<!--Anima Pill-->
    <HediffDef>
		<defName>AnimaBoost</defName>
		<label>psychic boost from anima pill</label>
		<labelNoun>an anima pill boost</labelNoun>
		<description>Active anima extract in the bloodstream. Regenerates Psyfocus among other mild psychic benefits.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-2.0</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<PsychicSensitivity>0.3</PsychicSensitivity>
					<PsychicEntropyRecoveryRate>0.4</PsychicEntropyRecoveryRate>
					<VPE_PsyfocusCostFactor MayRequire="VanillaExpanded.VPsycastsE">0.8</VPE_PsyfocusCostFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
  
    <ThoughtDef>
		<defName>AnimaBoost</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>AnimaBoost</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>consumed anima pill</label>
				<description>I feel so connected with nature and the world and full of energy.</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!--Anima Golden Pill-->
	<HediffDef>
		<defName>AnimaGoldenBoost</defName>
		<label>psychic boost from golden anima pill</label>
		<labelNoun>an anima golden pill boost</labelNoun>
		<description>Active pure anima energy in body and mind. Regenerates half the Psyfocus and boosts other psychic attributes.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-2.0</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<MaxEntropy>2.0</MaxEntropy>
					<PsychicSensitivity>0.8</PsychicSensitivity>
					<PsychicEntropyRecoveryRate>0.8</PsychicEntropyRecoveryRate>
					<VPE_PsyfocusCostFactor MayRequire="VanillaExpanded.VPsycastsE">0.5</VPE_PsyfocusCostFactor>
				</statOffsets>
			</li>
		 </stages>
	</HediffDef>
  
    <ThoughtDef>
		<defName>AnimaGoldenBoost</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>AnimaGoldenBoost</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>consumed golden anima pill</label>
				<description>I feel one with nature and the world. I can do anything!</description>
				<baseMoodEffect>15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
  
</Defs>